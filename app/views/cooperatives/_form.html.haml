
= form_for @cooperative do |f|
  - if @cooperative.errors.any?
    #error_explanation      
      %ul          
        - @cooperative.errors.each do |attr, msg|
          %li= msg

  .form-group
    = f.label "عنوان تعاونی", :class => "control-label"
    = f.text_field :name, :class => "text"
  .form-group
    = f.label "نام مدیرعامل", :class => "control-label"
    = f.text_field :managment_name, :class => "text"
  .form-group
    = f.label "رئیس هیئت مدیره", :class => "control-label"
    = f.text_field :board_Chairman_name, :class => "text"
  .form-group
    = f.label "نشانی", :class => "control-label"
    = f.text_area :address, :class => "text"
  .form-group
    = f.label "تلفن", :class => "control-label"
    = f.text_field :phone, :class => "text"
  .form-group
    = f.label "وب سایت", :class => "control-label"
    = f.text_field :website, :class => "text"
  .form-group
    = f.submit 'ثبت', :class => "button btn-sm"
