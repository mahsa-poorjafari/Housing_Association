.width80.set-center.margin-top
  .tbox2
    .title
      %h1= @cooperative.name
      -if flash[:AddCooper]        
        .alert.alert-success= flash[:AddCooper]
    

    .width80.set-center 
      %p
        %b عنوان تعاونی:
        = @cooperative.name
      %p
        %b مدیرعامل:
        = @cooperative.managment_name
      %p
        %b رئیس هیئت مدیره:
        = @cooperative.board_Chairman_name
      %p
        %b نشانی:
        = @cooperative.address
      %p
        %b تلفن:
        = @cooperative.phone
      %p
        %b وب سایت:
        =link_to  @cooperative.website, url_with_protocol(@cooperative.website), :target => "_blank"
    %br        
    - if is_admin?
      = link_to 'ویرایش', edit_cooperative_path(@cooperative)
      \|
      = link_to 'بازگشت', cooperatives_path
