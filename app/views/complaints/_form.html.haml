= form_for @complaint, :html => {:class => "contact", name: "contactform", :id => "contactform"} do |f|
  - if @complaint.errors.any?
    #error_explanation      
      %ul
        - @complaint.errors.full_messages.each do |msg|
          %li= msg
  -if flash[:notice]        
    .alert.alert-success= notice
  %p
    = f.text_field :subject, :id => "name", placeholder: "موضوع پرسش را وارد کنید"    
  %p
    = f.text_field :user_email, :id => "email", placeholder: "ایمیل خود را وارد کنید"    
  %p
    = f.text_field :user_phone, :id => "subject", placeholder: " تلفن خود را وارد کنید"    
  %p
    = f.text_area :complaint_text, :id => "comments", placeholder: "پرسش خود ر وارد کنید", :style => "resize: none"
  = f.submit 'ارسال', :class=>"mainBtn", :id => "submit"
%br
 
:javascript   
  
  $(':submit').click(function(e) {
    $(':text, textarea').each(function() {
      if ($(this).val().length == 0) {
        $(this).css('border', '2px solid red');
        e.preventDefault();
      }
    });
  });



