= form_for @message do |f|
  - if @message.errors.any?
    #error_explanation
      %ul
        - @message.errors.each do |attr, msg|
          %li= msg

  .field
    = f.label :subject
    = f.text_field :subject
  .field
    = f.label :text
    = f.text_area :text
  .field
    = f.label :visited
    = f.check_box :visited
  .field
    = f.label :user_name
    = f.text_field :user_name
  .actions
    = f.submit 'Save'
