.width80.set-center.margin-top
  .tbox2
    .width70.set-center
      .title
        %h2 عضویت در سایت
      = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
        = devise_error_messages!
        
        .form-group
          = f.label "ایمیل:"
          %i= 'لطفا ایمیل خود را صحیح وارد کنید.'
          %p= 'example@email.com'
          = f.email_field :email, :autofocus => true, :class => "text"
        .form-group
          = f.label 'رمزعبور:'
          %br/
          = f.password_field :password, :class => "text"
        .form-group
          = f.label 'تایید رمزعبور:'
          %br/
          = f.password_field :password_confirmation, :class => "text"
        .form-group
          = f.submit "عضویت", :class => "btn btn-default"
      = render "devise/shared/links"
