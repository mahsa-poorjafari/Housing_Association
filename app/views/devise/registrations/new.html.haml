#tbox2
  .title
    %h2 عضویت
  = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
    = devise_error_messages!
    %div
      = f.label 'کدملی:'
      %br/
      = f.text_field :national_code, :autofocus => true, :class => "text"
    %div
      = f.label "ایمیل:"
      = f.email_field :email, :autofocus => true, :class => "text"
    %div
      = f.label 'رمزعبور'
      %br/
      = f.password_field :password, :class => "text"
    %div
      = f.label 'تایید رمزعبور'
      %br/
      = f.password_field :password_confirmation, :class => "text"
    %div= f.submit "عضویت"
  = render "devise/shared/links"
