
= form_for @management do |f|
  - if @management.errors.any?
    #error_explanation      
      %ul
        - @management.errors.each do |attr, msg|
          %li= msg

  .form-group
    = f.label "نام:", :class => "control-label"
    = f.text_field :name, :class => "text"
  .form-group
    = f.label "نام خانوادگی:", :class => "control-label"
    = f.text_field :last_name, :class => "text"
  .form-group
    = f.label "سمت:", :class => "control-label"
    = f.text_field :post, :class => "text"
  .form-group
    = f.label "سابقه کاری:", :class => "control-label"
    = f.text_field :Work_Experience, :class => "text"
  .form-group
    = f.file_field :image, :class => "text"
  .form-group
    = f.submit 'ثبت', :class => "mainBtn"

