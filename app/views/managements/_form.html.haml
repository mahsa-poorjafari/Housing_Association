.small-form.set-center.well
  = form_for @management do |f|
    - if @management.errors.any?
      #error_explanation      
        %ul
          - @management.errors.each do |attr, msg|
            %li= msg

    .form-group
      = f.label "نام:", :class => "control-label"
      = f.text_field :name, :class => "form-control"
    .form-group
      = f.label "نام خانوادگی:", :class => "control-label"
      = f.text_field :last_name, :class => "form-control"
    .form-group
      = f.label "سمت:", :class => "control-label"
      = f.text_field :post, :class => "form-control"
    .form-group
      = f.label "سابقه کاری:", :class => "control-label"
      = f.text_field :Work_Experience, :class => "form-control"
    .form-group
      = f.file_field :image
    .form-group
      = f.submit 'ثبت', :class => "btn btn-primary"
%br
