.width80.set-center.margin-top
  .tbox2
    .title
      %h1= "لیست مدیران"
      - if is_admin?
        = link_to 'مدیر جدید', new_management_path, :class => "save-btn"
    %table.table.table-striped.table-hover{:style => "margin-top:5%"}
      %thead
        %tr
          %th نام
          %th نام خانوادگی
          %th سمت
          %th سوابق کاری
          %th عملیات
          
      %tbody
        - @managements.each do |management|
          %tr        
            %td= management.name
            %td= management.last_name
            %td= management.post
            %td= management.Work_Experience
            - if is_admin?
              %td
                = link_to 'مشاهده', management
                = link_to 'ویرایش', edit_management_path(management)
                = link_to 'حذف', management, :method => :delete, :data => { :confirm => 'آیا مطمئن هستید؟' }



    
