
    
.col-sm-8{:style => "text-align:left; margin-bottom:5%"}
  = JalaliDate.new(inform.created_at).format("%A %d %b %Y")           
.col-md-2
  - if is_admin?
    .admin-link
      = link_to 'ویرایش | ', edit_inform_path(inform)    
      = link_to 'حذف', inform, :method => :delete, :data => { :confirm => 'آیا مطمئن هستید؟' }
.col-md-2
  -if inform.immediate
    .important= "خبر فوری"   
    
.col-md-12  
  .col-md-8.immediate
    %h1= link_to inform.title, inform
    -if inform.project_id
      .col-md-12
        = link_to inform.project.title, inform.project
  - if inform.image.present?
    .col-md-4{:style => "text-align:center"}
      = image_tag inform.image(:medium)
  .col-sm-12.immediate-text{:style => " margin:2%; padding:2%"}            
    = raw inform.text
    
    
.col-sm-2
  .more
    = link_to 'مشاهده بیشتر', inform
        
