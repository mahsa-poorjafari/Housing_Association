.width80.set-center.margin-top
  - if notice.present?
    .alert.alert-success= notice
  .page-title-holder  
    
    = link_to '#' , rel: "content", :class => "print" do
      = image_tag 'icon_printer.gif'
      %span= 'پرینت نامه'
    
    .letter-show#content{:style => "font-family: 'open_sansregular';"}      
      .col-sm-12.letter-info
        .col-sm-3.letter-left-info          
          %p
            %b= 'تاریخ' 
            = JalaliDate.new(@letter.created_at)              
          %p
            %b= 'شماره'                  
            = @letter.letter_number
          %p
            %b= 'پیوست'            
        .col-sm-5.letter-besmei
          %b= 'بسمه تعالی'
        .col-sm-4.letter-right-info{:style => "font-family: 'open_sansregular'; font-size:12px"}                
          .letter-company-name= 'اتحادیه تعاونیهای مسکن فرهنگیان استان خراسان'
          %p
            %b= 'شماره ثبت ۱۱۹۰۵'
      .col-sm-12.letter-holder{:style => "font-family: 'open_sansregular';"}      
        .col-sm-12.letter-inner-title{:style => "font-family:IranNastaligh;"}= @letter.recievers.collect(&:company_name).join(',')
        .col-sm-12.letter-inner-title{:style => "font-family:IranNastaligh;"}= @letter.recievers.collect(&:preson_name).join(',')
        .col-sm-12.letter-text{:style => "font-family: 'open_sansregular';"}      
          %p{:style => "font-family: 'open_sansregular';"}=raw @letter.content
        .col-sm-12.letter-signture  
          .tank-box{:style => "width:40%; float:left; text-align:center"}
            %p= 'باتشکر'
            %b= 'مدیریت اتحادیه مسکن فرهنگیان خراسان'
          .clear{:style => "clear:both"}
          .attachment
            = @letter.attachment
            
        .set-center.show-address= 'آدرس: بلوار سازمان آب-نبش آپادانا-پلاک۷-تلفن و فاکس:۷۶۲۰۷۷۵-۰۵۱۳'
        
    
      = link_to 'ویرایش', edit_letter_path(@letter)
      \|
      = link_to 'بازگشت', :back

:javascript 
  $('.letter-text p').css('font-family', 'open_sansregular');
  $('.letter-text p').css('text-align', 'justify');
  $('.letter-text p span').css('font-family', 'open_sansregular');
