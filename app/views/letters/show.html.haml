:css
  @media print { 
    @font-face {
        font-family: 'open_sansregular';
        src: font-url('BYekan.eot');
        src: local("open sansregular"), local("open_sansregular"), font-url('BYekan.eot?#iefix') format('embedded-opentype'),        
             font-url('BYekan.otf') format('otf'),
             font-url('BYekan.ttf') format('truetype'),
             font-url('BYekan.svg#open_sansregular') format('svg');
        font-weight: normal;
        font-style: normal;
    }
    @font-face {
        font-family: 'IranNastaligh';
        src: font-url('IranNastaligh.eot');
        src: local("IranNastaligh"), font-url('IranNastaligh.eot?#iefix') format('embedded-opentype'),        
             font-url('IranNastaligh.otf') format('otf'),
             font-url('IranNastaligh.ttf') format('truetype'),
             font-url('IranNastaligh.svg#IranNastaligh_box') format('svg');
        font-weight: normal;
        font-style: normal;
    }
  }
    
.width80.set-center.margin-top
  - if notice.present?
    .alert.alert-success= notice
  .page-title-holder  
    
    = link_to '#' , rel: "content", :class => "print-hole-page" do
      = image_tag 'icon_printer.gif'
      %span= 'پرینت نامه'
    
    .letter-show#content
      .col-sm-12.letter-info
        .col-sm-3.letter-left-info          
          %p
            %b= 'تاریخ' 
            = JalaliDate.new(@letter.created_at)              
          %p
            %b= 'شماره'                  
            = @letter.letter_number
          %p
            %b= 'پیوست'            
        .col-sm-5.letter-besmei
          %b= 'بسمه تعالی'
        .col-sm-4.letter-right-info
          .letter-company-name= 'اتحادیه تعاونیهای مسکن فرهنگیان استان خراسان'
          %p
            %b= 'شماره ثبت ۱۱۹۰۵'
      .col-sm-12.letter-holder
        .col-sm-12.letter-inner-title= @letter.recievers.collect(&:company_name).join(',')
        .col-sm-12.letter-inner-title= @letter.recievers.collect(&:preson_name).join(',')
        .col-sm-12.letter-text{:style => "font-family: 'open_sansregular'; "}      
          %p=raw @letter.content
        .col-sm-12.letter-signture
          .tank-box{:style => "width:50%; text-align:center; float:left;"}
            %p= 'باتشکر'
            %b= 'مدیریت اتحادیه مسکن فرهنگیان خراسان'
          .clear{:style => "clear:both; "}
          %br
          
          .attachment{:style => "width:100%; text-align:right; margin-right:5%;"}
            - if @letter.attachment.present?
              %p= 'رونوشت:'
              =raw @letter.attachment
            
        .set-center.show-address= 'آدرس: بلوار سازمان آب-نبش آپادانا-پلاک۷-تلفن و فاکس:۳۷۶۲۰۷۵۵-۰۵۱'
        
    
    = link_to 'ویرایش', edit_letter_path(@letter)
    \|
    = link_to 'بازگشت', :back

:javascript 
  $('.letter-text p').css('font-family', 'open_sansregular');
  $('.letter-text p').css('text-align', 'justify');
  $('.letter-text p span').css('font-family', 'open_sansregular');
  $('a.print-hole-page').click(function(){
    $("#content").printThis({
      debug: false,               
      importCSS: true,            
      printContainer: true,       
      loadCSS: "assets/letter-print.css.scss",  
      pageTitle: "",              
      removeInline: false,        
      printDelay: 333,            
      header: null,               
      formValues: true            
    });
 
  });
