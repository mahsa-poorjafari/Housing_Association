!!! 5
%html
%head
  %title
    اتحادیه مسکن
  = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true 
  = javascript_include_tag "application", "data-turbolinks-track" => true 
  = csrf_meta_tags

%body    
  #header-wrapper
    #header.container
      #logo        
        %h1
          = link_to 'اتحادیه مسکن', root_path
      #menu
        = render "shared/nav_bar"
  .wrapper
    #three-column.container.set-center  
      #tbox1
        .title
          = render "devise/sessions/new", :resource => resource
        %hr
        .title
          %h2= 'پروژه ها'
          - Project.all.each do |project|
            = link_to project.title, project
      = yield 
      #tbox3
        .cooperative
          .title
            %h4= 'تعاونیهای تحت پوشش'
            %p
              - Cooperative.all.each do  |cooperative|
                = link_to cooperative.name, cooperative
        .links
          .title
            %h4= 'پیوندهای مرتبط'
            %div
              - Link.all.each do  |link|
                %p
                  = link_to link.title, url_with_protocol(link.web_site), :target => "_blank"
        .managment
          .title
            %h4= 'مدیران اتحادیه'
            %p
              - Management.all.each do  |management|
                = link_to management.name + ' ' + management.last_name, management
  #footer
    %button.btn.btn-primary{"data-toggle" => "modal", "data-target" => ".bs-example-modal-sm"}
      ارسال لینک به دوستان
    .modal.fade.bs-example-modal-sm{"aria-hidden" => "true", "aria-labelledby" => "mySmallModalLabel", role: "dialog", tabindex: "-1"}
      .modal-dialog.modal-sm
        .modal-content
          .modal-header
            %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", type: "button"} ×
            %h4#myModalLabel.modal-title Modal title
          .modal-body
            ستشمننننننننننن
          .modal-footer
            %button.btn.btn-default{"data-dismiss" => "modal", type: "button"} Close
            %button.btn.btn-primary{type: "button"} Save changes
          
