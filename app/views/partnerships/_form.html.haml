= form_for @partnership ||= Partnership.new, {:style => "direction:rtl"} do |f|
  - if @partnership.errors.any?
    #error_explanation      
      %ul
        - @partnership.errors.each do |attr, msg|
          %li= msg

  =hidden_field_tag :project_id, @project_id
  .form-group.col-sm-3.pull-right
    = f.label 'نام:*', :class => "control-label"
    = f.text_field :first_name, :class => "form-control", :id => "first_name"
  .form-group.col-sm-3.pull-right
    = f.label 'نام خانوادگی:*', :class => "control-label"
    = f.text_field :last_name, :class => "form-control", :id => "last_name"
  .form-group.col-sm-3.pull-right
    = f.label 'ایمیل:*', :class => "control-label"
    = f.text_field :email, :class => "form-control", :id => "email"
  .form-group.col-sm-3.pull-right
    = f.label 'نام پدر:*', :class => "control-label"
    = f.text_field :father_name, :class => "form-control", :id => "father_name"    
  .form-group.col-sm-3.pull-right
    = f.label 'شماره تماس ثابت:', :class => "control-label"
    = f.text_field :phone_number, :class => "form-control"
  .form-group.col-sm-3.pull-right
    = f.label 'شماره تماس همراه:*', :class => "control-label"
    = f.text_field :mobile, :class => "form-control", :id => "mobile"
  .form-group.col-sm-3.pull-right
    = f.label 'تاریخ تولد:', :class => "control-label"
    = f.text_field :birthdate_fa, :class => "fa_date form-control"
  
  .form-group.col-sm-3.pull-right
    = f.label 'جنسیت:', :class => "control-label"
    =  f.select(:gender, [['مذکر',1], ['مونث',0]])  
  .clear-float
  .form-group.col-sm-6.pull-right
    .col-sm-8= f.label 'عضو خانواده فرهنگیان هستم.', :class => "control-label"
    .col-sm-2= f.check_box :farhangi
  .clear-float
  .form-group.col-sm-6.pull-right
    = f.label 'آدرس', :class => "control-label"
    = f.text_area :address, :class => "form-control", :style => "resize:none"
  .form-group.col-sm-6.pull-right
    = f.label 'سایر توضیحات:', :class => "control-label"
    = f.text_area :description, :class => "form-control", :style => "resize:none"  
  .clear-float
  .col-sm-4
    = link_to 'بازگشت', :back
  .form-group.col-sm-4
    = f.submit 'مرحله بعد', :class => "mainBtn partnership-hide", :id => "partnership-submit"
    
    
    
:javascript  
  
  $(':submit#partnership-submit').click(function(e) {
    $(':text#first_name, :text#last_name, :text#email, :text#father_name, :text#mobile').each(function() {
      if ($(this).val().length == 0) {
        $(this).css('border', '2px solid red');
        e.preventDefault();
      }
    });
  });
