      / /.col-md-4
      .col-md-4.col-sm-6
        #service-2.service-item
          %h2{:style => "padding:5%; font-size:20px; color:#fff; "}
            = link_to 'تعاونیهای تحت پوشش', Cooperative
            
          
          .service-icon
            = image_tag 'colab.png', :class => "set-center"
          / /.service-icon
          .service-content{:style => "overflow-y: scroll;"}
            .inner-service
