            = link_to ' فرم های اتحادیه', PdfForm
          .service-icon
            = image_tag 'form.png', :class => "set-center"
          / /.service-icon
          .service-content
            .inner-service
              - @forms.each do  |form|
                %p
                  = link_to form.title, form
              
              
          / /.service-content
        / /#service-1
      / /.col-md-3
      
      
      .col-md-4.col-sm-6
        #service-4.service-item
          %h2{:style => "padding:5%; font-size:20px; color:#fff; "}
            = link_to 'داوری', Complaint
            
