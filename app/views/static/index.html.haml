        = image_tag 'housing-assoc.jpg'
      / /.col-md-5
    / /.row
  / /.container
/ /#our-team


#contact.content-section
  .container
    .row
      .heading-section.col-md-12.text-center
        %h2 ارتباط با ما
        %p ارسال پیام به مدیر سایت
      / /.heading-section
    / /.row
    .row
      .col-md-12
        .googlemap-wrapper
          #map_canvas.map-canvas
            %iframe{:height => "360", :src => "https://mapsengine.google.com/map/embed?mid=zbDi3iZxywyM.k2AO5ZBVP0qU", :width => "700"}
          .phone-book
            .title{:style => "padding:5%;"}
              %h2= 'دفترچه تلفن اتحادیه'              
              .text-cadr-home-page
                = form_tag search_contact_path(1), :method => "get", id: "search-form", :remote => true do 
                  = text_field_tag :search, params[:search], :id => 'search_field' 
                  = submit_tag "جستجو", :name => nil, :id => "search-submit" 
                  #clear.col-md-4= link_to  "تصحیح", '#phone'            
            #search_result.search_result
                
                

            
        / /.googlemap-wrapper
      / /.col-md-12
    / /.row
    .row
      .col-md-7.col-sm-6
        .text-cadr-home-page=raw @contact.first.text
        
      / /.col-md-7
      .col-md-5.col-sm-6
        .contact-form
          = render 'shared/msg_form'
        / /.contact-form
      / /.col-md-5
    / /.row
  / /.container
/ /#contact

:javascript
  $('#clear').click(function()
  {
    $('#search_field').val('');
    $('#search_result').empty();
  }); 

  
  $(':submit#search-submit').click(function(e) {
    $(':text#search_field').each(function() {
      if ($(this).val().length == 0) {
        $(this).css('border', '2px solid red');
        e.preventDefault();
      }
    });
  });


