
#inform.content-section
  .container
    .row
      .heading-section.col-md-12.text-center
        %h2 اعلامیه ها
        %p جدیدترین اعلامیه ها و اخبار تعاونی مسکن فرهنگیان استان خراسان
      / /.heading-section
    / /.row
    .row
      - Inform.all.each do |inform|
        - if inform.immediate.present?
          .col-sm-12.immediate-inform
            = render 'informs/immediate_inform', :inform => inform
              
        - else  
          .col-sm-5.inform-info  
            = render 'informs/important_inform', :inform => inform
          
#services.content-section
  .container
    .row
      .heading-section.col-md-12.text-center
        %h2
      / /.heading-section
    / /.row
    .row
      .col-md-4.col-sm-6
        #service-1.service-item
          %h2{:style => "padding-top:2%; font-size:20px; color:#fff"}
            = link_to 'پیوندهای مرتبط', Link
            
            
          
