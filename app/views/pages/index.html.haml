.page-header
  .row 
    %h1 صفحات متنی

%table
  %tr
    %th عنوان      
    %th

  - @pages.each do |page|
    %tr
      %td=link_to page.title, page      
      %td
        = link_to 'ویرایش', edit_page_path(page)
        = link_to 'حذف', page, :method => :delete, :data => { :confirm => 'آیا مطمئن هستید؟' }

%br

= link_to 'تعریف صفحه متنی جدید', new_page_path, :class => "btn btn-primary"
