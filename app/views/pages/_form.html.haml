= form_for @page do |f|
  - if @page.errors.any?
    #error_explanation      
      %ul
        - @page.errors.each do |attr, msg|
          %li= msg

  .form-group
    - if @page.title == 'تماس با ما'
      = f.label @page.title, :class => "control-label"
    - else     
      = f.label :عنوان, :class => "control-label"
      = f.text_field :title, :class => "form-control"
      
  .form-group.editor
    = f.label :متن, :class => "control-label"
    = f.text_area :text, :class => "ckeditor"
  .form-group
    = f.submit 'ثبت', :class => "btn btn-primary"
.clear-float
