= form_for @payment do |f|
  - if @payment.errors.any?
    #error_explanation      
      %ul
        - @payment.errors.each do |attr, msg|
          %li= msg

  .field
    = f.label "سقف مبلغ پرداختی:"
    = f.text_field :amount
  .field
    = f.label "شماره فیش واریزی:"
    = f.text_field :bank_draft_no
  .actions
    = f.submit 'ثبت'
