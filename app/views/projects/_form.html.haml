= form_for @project do |f|
  - if @project.errors.any?
    #error_explanation
      %h2= "#{pluralize(@project.errors.count, "error")} prohibited this project from being saved:"
      %ul
        - @project.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :address
    = f.text_area :address
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :Area
    = f.text_field :Area
  .field
    = f.label :unit
    = f.number_field :unit
  .field
    = f.label :Status
    = f.check_box :Status
  .actions
    = f.submit 'Save'
