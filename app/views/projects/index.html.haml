.page-header
  .row 
    %h1= "لیست پروژه ها"

%table.table.table-striped.table-hover 
  %thead
    %tr
      %th عنوان
      %th آدرس
      %th توضیحات
      %th متراژ
      %th تعداد واحد
      %th وضعیت      
      %th عملیات
  %tbody
    - @projects.each do |project|
      %tr
        %td= link_to project.title, project
        %td= project.address
        %td= project.description
        %td= project.Area
        %td= project.unit
        %td 
          -if project.Status        
            تحویل داده شده
          -else
            در دست احداث
          
        %td
          = link_to 'ویرایش', edit_project_path(project)
          = link_to 'حذف', project, :method => :delete, :data => { :confirm => 'آیا مطمئن هستید؟' }



= link_to 'پروژه جدید', new_project_path, :class => "btn btn-primary btn-sm"
