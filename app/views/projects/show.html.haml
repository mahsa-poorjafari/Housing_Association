#tbox2     
  -if notice
    .alert.alert-dismissable.alert-success
      %p#notice= notice  
      
  .title
    %h3= @project.title           
    .admin-link
      = link_to 'ویرایش', edit_project_path(@project)
      \|
      = link_to 'بازگشت', projects_path
      
  %div
    .row.text-center
      =link_to (image_tag @project.pictures.first.image(:large)), @project.pictures.first.image(:original), :data => { :colorbox => true }         
    
      .col-md-5.info
        %p
          %b آدرس:
          = @project.address
        %p
          %b توضیحات تکمیلی:
          = @project.description
        %p
          %b متراژ:
          = @project.Area
        %p
          %b تعداد واحد:
          = @project.unit
        %p
          %b وضعیت:
          -if  @project.Status
            تحویل داده شده
          -else
            در دست احداث
      .row    
        -if @reg_before
          .col-md-5.reg-link= "شما قبلا در این پروژه ثبت نام کرده اید."
        -else
          .col-md-5.reg-link
            = link_to 'لینک ثبت نام', new_payment_path(:id => @project.id), :class => "btn btn-danger"
      
    .clear-float
    %div
      - @project.pictures.offset(1).each do |picture|
        .col-lg-4
          =link_to (image_tag picture.image(:small)), picture.image(:large), :data => { :colorbox => true }     

