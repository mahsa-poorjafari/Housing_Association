= form_for @contact do |f|
  - if @contact.errors.any?
    #error_explanation      
      %ul
        - @contact.errors.each do |attr, msg|
          %li= msg

  .form-group
    = f.label 'نام و نام خانوادگی:', :class => "control-label"    
    = f.text_field :preson_name, :class => "form-control"
  .form-group
    = f.label 'ایمیل:', :class => "control-label"    
    = f.email_field :email, :class => "form-control"
  .form-group
    = f.label 'نام شرکت/تعاونی:', :class => "control-label"    
    = f.text_field :company_name, :class => "form-control"
  .form-group
    = f.label 'تلفن:', :class => "control-label"    
    = f.text_field :phone, :class => "form-control"
  .form-group
    = f.label 'فکس:', :class => "control-label"    
    = f.text_field :fax, :class => "form-control"
  .form-group
    = f.label 'آدرس:', :class => "control-label"    
    = f.text_area :address, :class => "form-control"
  .form-group
    = f.submit 'ثبت', :class => "mainBtn"
