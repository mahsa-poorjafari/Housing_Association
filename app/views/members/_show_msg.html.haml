#msg-holder{:class => dialog.id}
  .from
    %h5.sender    
      فرستنده:
      = dialog.sender.name
    %h5.receiver
      گیرنده ها:
      = dialog.receivers.collect(&:full_name).join(',')
    -if dialog.sender.image
      = image_tag dialog.sender.image(:medium)
    -else
      = image_tag "unknown.png"
    
  .msg-text-info
    .subject
      %h5= "موضوع:"
      .sub-title= dialog.subject
      = link_to (image_tag "delete-icon.png"), dialog, :method => :delete, :data => { :confirm => 'آیا مطمئن هستید؟' }, :remote => true, :title => "حذف"
    .msg-text
      = dialog.content
  
