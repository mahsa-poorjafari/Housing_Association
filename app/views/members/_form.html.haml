= form_for @member do |f|
  - if @member.errors.any?
    #error_explanation
      
      %ul
        - @member.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :last_name
    = f.text_field :last_name
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :phone_number
    = f.text_field :phone_number
  .field
    = f.label :mobile
    = f.text_field :mobile
  .field
    = f.label :address
    = f.text_area :address
  .field
    = f.label :postal_code
    = f.text_field :postal_code
  .field
    = f.label :father_name
    = f.text_field :father_name
  .field
    = f.label :birthdate
    = f.date_select :birthdate
  .field
    = f.label :national_id_card
    = f.text_field :national_id_card
  .field
    = f.label :identify_number
    = f.text_field :identify_number
  .actions
    = f.submit 'Save'
