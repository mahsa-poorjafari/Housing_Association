.page-header
  .row 
    %h1= 'پیوند های مرتبط'
  = link_to 'پیوند جدید', new_link_path
  .row

    - @links.each do |link|
      .row
        = link.title
        = link_to link.web_site, url_with_protocol(link.web_site)
        = link_to 'Show', link
        = link_to 'ویرایش', edit_link_path(link)
        = link_to 'حذف', link, :method => :delete, :data => { :confirm => 'آیا مطمئن هستید؟' }




