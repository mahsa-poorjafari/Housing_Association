= form_for @link do |f|
  - if @link.errors.any?
    #error_explanation      
      %ul
        - @link.errors.each do |attr, msg|
          %li= msg

  .field
    = f.label 'عنوان:', :class => "control-label"    
    = f.text_field :title, :class => "text"
  .field
    = f.label "وب سایت:", :class => "control-label"    
    = f.text_field :web_site, :class => "text"
  .actions
    = f.submit 'ثبت', :class => "button btn-sm"
