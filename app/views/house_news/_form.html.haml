= form_for @house_news do |f|
  - if @house_news.errors.any?
    #error_explanation
      %h2= "#{pluralize(@house_news.errors.count, "error")} prohibited this house_news from being saved:"
      %ul
        - @house_news.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :text
    = f.text_area :text
  .field
    = f.label :number_Visit
    = f.number_field :number_Visit
  .field
    = f.label :Important
    = f.check_box :Important
  .actions
    = f.submit 'Save'
