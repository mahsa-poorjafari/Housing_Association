.width80.set-center.margin-top
  .tbox2
    .title    
      - if flash[:reg]
        .alert.alert-success=flash[:reg]
      - if @project.present?
        %h1= "فرم ثبت نام در پروژه" + " " + @project.title
      -else
        %h1= "فرم ثبت نام در پروژه"
      %h2= 'فرم اطلاعات مالی'
    .col-sm-1
    .col-sm-11
      .step.col-sm-3
        %p= 'مرحله سوم'
        %p= 'دریافت کد رهگیری'
      .step.active.col-sm-3
        %p= 'مرحله دوم'
        %p= 'تکمیل اطلاعات مالی'
      .step.col-sm-3
        %p= 'مرحله اول'
        %p= 'تکمیل اطلاعات شخصی'
      
        
    
    .col-sm-12.contact-form     
      - if flash[:error]        
        .alert.alert-warning= flash[:error]
      = render 'form'
        
    


